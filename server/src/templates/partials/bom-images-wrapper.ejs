<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>BOM Images</title>
  <style>
    @page {
      size: A4 landscape;
      margin: 20mm 25mm;
    }

    body {
      font-family: 'Roboto', Arial, sans-serif;
      font-size: 11pt;
      line-height: 1.5;
      color: #1f2933;
      -webkit-print-color-adjust: exact;
      print-color-adjust: exact;
      margin: 0;
      padding: 0;
    }

    .section-title {
      font-size: 18pt;
      text-transform: uppercase;
      letter-spacing: 1px;
      border-bottom: 3px solid #111827;
      padding-bottom: 10px;
      margin: 0 0 24px 0;
      page-break-after: avoid;
      page-break-inside: avoid;
      break-after: avoid;
      break-inside: avoid;
      font-weight: 700;
      color: #0f172a;
    }

    .grid {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 18px;
    }

    .grid-item {
      border: 1px solid #E0E0E0;
      border-radius: 6px;
      padding: 12px;
      background: #fff;
      min-height: 160px;
      page-break-inside: avoid;
      display: flex;
      flex-direction: column;
    }

    .grid-item img {
      width: 100%;
      height: 160px;
      object-fit: contain;
      border: 1px solid #E0E0E0;
      border-radius: 6px;
      margin-bottom: 10px;
      background: #f8fafc;
      image-rendering: -webkit-optimize-contrast;
      image-rendering: crisp-edges;
    }

    .grid-item-placeholder {
      width: 100%;
      height: 160px;
      border: 1px solid #E0E0E0;
      border-radius: 6px;
      margin-bottom: 10px;
      display: flex;
      align-items: center;
      justify-content: center;
      color: #64748b;
      font-size: 11pt;
      background: #f8fafc;
      text-align: center;
    }

    .grid-item-name {
      font-size: 11pt;
      font-weight: 600;
      color: #0f172a;
      margin-bottom: 6px;
    }

    .grid-item-details {
      font-size: 10pt;
      color: #64748b;
      line-height: 1.5;
    }

    .text-muted {
      color: #6b7280;
      font-size: 9pt;
    }

    .avoid-break {
      page-break-inside: avoid;
      break-inside: avoid;
    }
  </style>
</head>
<body>
  <%- include('article-summary', { meta, images }) %>
  <div class="section-title"><%= strings.bomImageSheetTitle %></div>

  <% if (bomImages && bomImages.length) { %>
    <div class="grid">
      <% bomImages.forEach((item) => { %>
        <div class="grid-item avoid-break">
          <% if (item.image) { %>
            <img src="<%= item.image %>" alt="<%= item.name %>" />
          <% } else { %>
            <div class="grid-item-placeholder">
              No image provided
            </div>
          <% } %>
          <div class="grid-item-name"><%= item.name %></div>
          <div class="grid-item-details">
            <% if (item.part) { %>
              <div><strong>Part:</strong> <%= item.part %></div>
            <% } %>
            <% if (item.placement) { %>
              <div><strong>Placement:</strong> <%= item.placement %></div>
            <% } %>
            <% if (item.supplier) { %>
              <div><strong>Supplier:</strong> <%= item.supplier %></div>
            <% } %>
          </div>
        </div>
      <% }) %>
    </div>
  <% } else { %>
    <div style="padding:32px; text-align:center; color:#94a3b8; font-size:11pt;"><%= strings.emptyBomImages %></div>
  <% } %>
</body>
</html>

