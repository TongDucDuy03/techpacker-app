<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>How to Measure</title>
  <style>
    @page {
      size: A4 landscape;
      margin: 20mm 25mm;
    }

    body {
      font-family: 'Roboto', 'Arial', 'Helvetica', 'DejaVu Sans', sans-serif;
      font-size: 11pt;
      line-height: 1.5;
      color: #1f2933;
      -webkit-print-color-adjust: exact;
      print-color-adjust: exact;
      margin: 0;
      padding: 0;
    }

    .section-title {
      font-size: 18pt;
      text-transform: uppercase;
      letter-spacing: 1px;
      border-bottom: 3px solid #111827;
      padding-bottom: 10px;
      margin: 0 0 24px 0;
      page-break-after: avoid;
      page-break-inside: avoid;
      break-after: avoid;
      break-inside: avoid;
      font-weight: 700;
      color: #0f172a;
    }

    .howto {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 24px;
      padding: 12px;
      border: 1px solid #E0E0E0;
      border-radius: 6px;
      background: #f8fafc;
      margin-bottom: 24px;
      page-break-inside: avoid;
    }

    .howto-image-section {
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .howto img {
      width: 100%;
      max-height: 280px;
      object-fit: contain;
      border: 1px solid #E0E0E0;
      border-radius: 6px;
      background: #fff;
      margin-bottom: 12px;
      image-rendering: -webkit-optimize-contrast;
      image-rendering: crisp-edges;
    }

    .howto-image-placeholder {
      width: 100%;
      height: 240px;
      border: 1px solid #E0E0E0;
      border-radius: 6px;
      display: flex;
      align-items: center;
      justify-content: center;
      color: #64748b;
      font-size: 11pt;
      background: #f8fafc;
      margin-bottom: 12px;
      text-align: center;
    }

    .howto-content-section {
      display: flex;
      flex-direction: column;
    }

    .howto-steps {
      margin-bottom: 12px;
    }

    .howto-tips-mistakes {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 12px;
    }

    .howto-content h3 {
      font-size: 14pt;
      margin-bottom: 10px;
      text-transform: uppercase;
      font-weight: 700;
      color: #0f172a;
    }

    .text-muted {
      color: #6b7280;
      font-size: 9pt;
    }

    .avoid-break {
      page-break-inside: avoid;
      break-inside: avoid;
    }
  </style>
</head>
<body>
  <%- include('article-summary', { meta, images }) %>
  <div class="section-title"><%= strings.howToMeasureTitle %></div>

  <% if (howToMeasure && howToMeasure.length) { %>
    <% howToMeasure.forEach((item) => { %>
      <div class="howto avoid-break">
        <div class="howto-image-section">
          <% if (item.image) { %>
            <img src="<%= item.image %>" alt="<%= item.title %>" />
          <% } else { %>
            <div class="howto-image-placeholder">
              No image provided
            </div>
          <% } %>
        </div>
        <div class="howto-content-section">
          <h3><%= item.title %></h3>
          <p style="margin-bottom:10px; font-size:11pt;"><%= item.description %></p>

          <% if (item.steps && item.steps.length) { %>
            <div class="howto-steps">
              <strong style="font-size:12pt; text-transform:uppercase; display:block; margin-bottom:6px; color:#0f172a; font-weight:700;"><%= strings.howToMeasureSteps %></strong>
              <ol style="margin-left:20px; margin-bottom:12px; font-size:11pt; line-height:1.5;">
                <% item.steps.forEach((step) => { %>
                  <li style="margin-bottom:6px;"><%= step %></li>
                <% }) %>
              </ol>
            </div>
          <% } %>

          <div class="howto-tips-mistakes">
            <% if (item.tips && item.tips.length) { %>
              <div>
                <strong style="font-size:12pt; color:#2563eb; display:block; margin-bottom:6px; text-transform:uppercase; font-weight:700;"><%= strings.howToMeasureTips %></strong>
                <ul style="margin-left:20px; margin-bottom:12px; font-size:11pt; color:#2563eb; line-height:1.5;">
                  <% item.tips.forEach((tip) => { %>
                    <li style="margin-bottom:6px;"><%= tip %></li>
                  <% }) %>
                </ul>
              </div>
            <% } %>

            <% if (item.mistakes && item.mistakes.length) { %>
              <div>
                <strong style="font-size:12pt; color:#f97316; display:block; margin-bottom:6px; text-transform:uppercase; font-weight:700;"><%= strings.howToMeasureWarnings %></strong>
                <ul style="margin-left:20px; margin-bottom:10px; font-size:11pt; color:#f97316; line-height:1.5;">
                  <% item.mistakes.forEach((mistake) => { %>
                    <li style="margin-bottom:6px;"><%= mistake %></li>
                  <% }) %>
                </ul>
              </div>
            <% } %>
          </div>

          <% if (item.related && item.related.length) { %>
            <div class="text-muted" style="font-size:10pt; margin-top:10px;">
              <strong><%= strings.howToMeasureRelated %></strong> <%= item.related.join(', ') %>
            </div>
          <% } %>
        </div>
      </div>
    <% }) %>
  <% } else { %>
    <div style="padding:32px; text-align:center; color:#94a3b8; font-size:11pt;"><%= strings.emptyHowToMeasure %></div>
  <% } %>
</body>
</html>

