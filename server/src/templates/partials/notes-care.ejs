<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Notes & Care Symbols</title>
  <style>
    @page {
      size: A4;
      margin: 15mm 20mm;
    }

    body {
      font-family: 'Roboto', Arial, sans-serif;
      font-size: 10px;
      line-height: 1.45;
      color: #1f2933;
      -webkit-print-color-adjust: exact;
      print-color-adjust: exact;
      margin: 0;
      padding: 0;
    }

    .section-title {
      font-size: 13px;
      text-transform: uppercase;
      letter-spacing: 0.6px;
      border-bottom: 2px solid #111827;
      padding-bottom: 6px;
      margin: 24px 0 12px;
      page-break-after: avoid;
    }

    .notes-list {
      list-style: disc;
      margin-left: 18px;
      line-height: 1.5;
      margin-bottom: 24px;
    }

    .notes-list li {
      margin-bottom: 12px;
      page-break-inside: avoid;
    }

    .care-grid {
      display: grid;
      grid-template-columns: repeat(6, 1fr);
      gap: 12px;
      margin-top: 16px;
    }

    .care-item {
      text-align: center;
      padding: 10px;
      border: 1px solid #d1d5db;
      border-radius: 6px;
      background: #fff;
      page-break-inside: avoid;
    }

    .care-item img {
      width: 48px;
      height: 48px;
      object-fit: contain;
      margin-bottom: 6px;
    }

    .text-muted {
      color: #6b7280;
      font-size: 8px;
    }

    .avoid-break {
      page-break-inside: avoid;
      break-inside: avoid;
    }
  </style>
</head>
<body>
  <% if (notes && notes.length) { %>
    <div class="section-title"><%= strings.notesTitle %></div>
    <ul class="notes-list">
      <% notes.forEach((note) => { %>
        <li class="avoid-break">
          <strong><%= note.title %></strong>
          <% if (note.updatedAt) { %>
            <span class="text-muted"> â€” <%= note.updatedAt %></span>
          <% } %>
          <div style="margin-top:4px; font-size:9px;"><%= note.body %></div>
        </li>
      <% }) %>
    </ul>
  <% } %>

  <% if (careSymbols && careSymbols.length) { %>
    <div class="section-title"><%= strings.careSymbolsTitle %></div>
    <div class="care-grid">
      <% careSymbols.forEach((symbol) => { %>
        <div class="care-item avoid-break">
          <% if (symbol.image) { %>
            <img src="<%= symbol.image %>" alt="<%= symbol.label %>" />
          <% } else { %>
            <div style="width:48px; height:48px; border:1px dashed #d1d5db; margin:0 auto 6px; display:flex; align-items:center; justify-content:center; color:#9ca3af; font-size:8px;">
              N/A
            </div>
          <% } %>
          <div style="font-size:8px;">
            <strong><%= symbol.label %></strong>
            <% if (symbol.description) { %>
              <div class="text-muted"><%= symbol.description %></div>
            <% } %>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>

  <% if ((!notes || notes.length === 0) && (!careSymbols || careSymbols.length === 0)) { %>
    <div style="padding:32px; text-align:center; color:#94a3b8;">
      <%= strings.emptyNotes %> & <%= strings.emptyCareSymbols %>
    </div>
  <% } %>
</body>
</html>


