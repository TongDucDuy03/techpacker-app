<style>
  .article-summary {
    width: 100%;
    border: 1px solid #E0E0E0;
    border-radius: 6px;
    margin-bottom: 18px;
    page-break-inside: avoid;
    background: #ffffff;
  }

  .article-summary table {
    width: 100%;
    border-collapse: collapse;
    font-size: 11pt;
  }

  .article-summary th {
    background: #E0E0E0;
    padding: 10px 12px;
    text-align: left;
    font-weight: 700;
    font-size: 12pt;
    text-transform: uppercase;
    color: #0f172a;
    border: 1px solid #E0E0E0;
    vertical-align: top;
  }

  .article-summary td {
    padding: 10px 12px;
    border: 1px solid #E0E0E0;
    color: #1f2933;
    vertical-align: top;
    font-size: 11pt;
  }

  .article-summary .logo-cell {
    width: 120px;
    text-align: center;
  }

  .article-summary .logo-cell img {
    max-width: 100px;
    max-height: 60px;
    object-fit: contain;
  }

  .article-summary .logo-placeholder {
    width: 100px;
    height: 50px;
    border: 1px solid #E0E0E0;
    border-radius: 4px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #64748b;
    font-size: 9pt;
    background: #f8fafc;
    margin: 0 auto;
  }

  .article-summary .info-cell {
    width: auto;
  }

  .article-summary .info-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 8px;
  }

  .article-summary .info-item {
    margin-bottom: 6px;
  }

  .article-summary .info-label {
    font-weight: 600;
    color: #64748b;
    font-size: 10pt;
    margin-right: 6px;
  }

  .article-summary .info-value {
    color: #0f172a;
    font-size: 11pt;
  }

  .article-summary .image-cell {
    width: 150px;
    text-align: center;
  }

  .article-summary .image-cell img {
    max-width: 140px;
    max-height: 100px;
    object-fit: contain;
    border: 1px solid #E0E0E0;
    border-radius: 6px;
  }

  .article-summary .image-placeholder {
    width: 140px;
    height: 90px;
    border: 1px solid #E0E0E0;
    border-radius: 6px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #64748b;
    font-size: 10pt;
    background: #f8fafc;
    margin: 0 auto;
  }
</style>

<div class="article-summary">
  <table>
    <thead>
      <tr>
        <th class="logo-cell">Logo</th>
        <th class="info-cell" colspan="2">Article Summary</th>
        <th class="image-cell">Design Sketch</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td class="logo-cell" rowspan="3">
          <% if (images && images.companyLogo) { %>
            <img src="<%= images.companyLogo %>" alt="Company Logo" />
          <% } else { %>
            <div class="logo-placeholder">No logo</div>
          <% } %>
        </td>
        <td class="info-cell">
          <div class="info-item">
            <span class="info-label">Article Code:</span>
            <span class="info-value"><%= meta.articleCode || '—' %></span>
          </div>
          <div class="info-item">
            <span class="info-label">Product Name:</span>
            <span class="info-value"><%= meta.productName || '—' %></span>
          </div>
          <div class="info-item">
            <span class="info-label">Version:</span>
            <span class="info-value"><%= meta.version || '—' %></span>
          </div>
          <div class="info-item">
            <span class="info-label">Season:</span>
            <span class="info-value"><%= meta.season || '—' %></span>
          </div>
          <div class="info-item">
            <span class="info-label">Status:</span>
            <span class="info-value"><%= meta.lifecycleStage || '—' %></span>
          </div>
        </td>
        <td class="info-cell">
          <div class="info-item">
            <span class="info-label">Category:</span>
            <span class="info-value"><%= meta.category || '—' %></span>
          </div>
          <div class="info-item">
            <span class="info-label">Brand:</span>
            <span class="info-value"><%= meta.brand || '—' %></span>
          </div>
          <div class="info-item">
            <span class="info-label">Gender:</span>
            <span class="info-value"><%= meta.gender || '—' %></span>
          </div>
          <div class="info-item">
            <span class="info-label">Collection:</span>
            <span class="info-value"><%= meta.collectionName || '—' %></span>
          </div>
          <div class="info-item">
            <span class="info-label">Supplier:</span>
            <span class="info-value"><%= meta.supplier || '—' %></span>
          </div>
        </td>
        <td class="image-cell" rowspan="3">
          <% if (images && images.coverImage) { %>
            <img src="<%= images.coverImage %>" alt="Design Sketch" />
          <% } else { %>
            <div class="image-placeholder">No image provided</div>
          <% } %>
        </td>
      </tr>
      <tr>
        <td class="info-cell" colspan="2">
          <div class="info-item">
            <span class="info-label">Description:</span>
            <span class="info-value"><%= meta.description || '—' %></span>
          </div>
          <div class="info-item" style="margin-top:6px;">
            <span class="info-label">Fabric:</span>
            <span class="info-value"><%= meta.fabricDescription || '—' %></span>
          </div>
          <div class="info-item" style="margin-top:6px;">
            <span class="info-label">Designer:</span>
            <span class="info-value"><%= meta.designer || '—' %></span>
          </div>
        </td>
      </tr>
      <tr>
        <td class="info-cell" colspan="2">
          <div class="info-item">
            <span class="info-label">Created:</span>
            <span class="info-value"><%= meta.createdAtFormatted || '—' %></span>
          </div>
          <div class="info-item" style="margin-top:6px;">
            <span class="info-label">Updated:</span>
            <span class="info-value"><%= meta.updatedAtFormatted || '—' %></span>
          </div>
        </td>
      </tr>
    </tbody>
  </table>
</div>

