<div class="section-title"><%= strings.bomImageSheetTitle %></div>

<% if (bomImages && bomImages.length) { %>
  <div class="grid">
    <% bomImages.forEach((item) => { %>
      <div class="grid-item avoid-break">
        <% if (item.image) { %>
          <img src="<%= item.image %>" alt="<%= item.name %>" />
        <% } else { %>
          <div style="width:100%; height:120px; border:1px dashed #d1d5db; border-radius:4px; display:flex; align-items:center; justify-content:center; color:#9ca3af; font-size:9px;">
            No image
          </div>
        <% } %>
        <div style="font-size:9px;">
          <p><strong><%= item.name %></strong></p>
          <% if (item.part) { %>
            <p class="text-muted">Part: <%= item.part %></p>
          <% } %>
          <% if (item.placement) { %>
            <p class="text-muted">Placement: <%= item.placement %></p>
          <% } %>
          <% if (item.supplier) { %>
            <p class="text-muted">Supplier: <%= item.supplier %></p>
          <% } %>
        </div>
      </div>
    <% }) %>
  </div>
<% } else { %>
  <div style="padding:32px; text-align:center; color:#94a3b8;"><%= strings.emptyBomImages %></div>
<% } %>

