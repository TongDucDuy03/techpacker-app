<!-- Header partial for TechPack PDF -->
<div class="header">
    <div class="header-top">
        <div class="logo-section">
            <% if (logoUrl) { %>
            <img src="<%= logoUrl %>" alt="Company Logo" class="logo" />
            <% } else { %>
            <div style="width: 120px; height: 60px; border: 1px solid #ddd; display: flex; align-items: center; justify-content: center; font-size: 10px; color: #999;">
                LOGO
            </div>
            <% } %>
        </div>
        
        <div class="article-info">
            <p><strong>Article Code:</strong> <%= techpack.articleCode %></p>
            <p><strong>Version:</strong> <%= techpack.version %></p>
            <p><strong>Designer:</strong> <%= techpack.designer %></p>
            <p><strong>Supplier:</strong> <%= techpack.supplier %></p>
            <p><strong>Season:</strong> <%= techpack.season %></p>
            <% if (techpack.brand) { %>
            <p><strong>Brand:</strong> <%= techpack.brand %></p>
            <% } %>
            <% if (techpack.collection) { %>
            <p><strong>Collection:</strong> <%= techpack.collection %></p>
            <% } %>
            <p><strong>Generated:</strong> <%= generatedAt %></p>
        </div>
    </div>
    
    <h1 class="tech-pack-title"><%= techpack.name %></h1>
    
    <div class="fabric-description">
        <%= techpack.fabricDescription %>
    </div>
    
    <!-- Status indicators -->
    <div style="display: flex; justify-content: space-between; align-items: center; margin-top: 10px; font-size: 9px;">
        <div>
            <span style="background: #e8f5e8; padding: 2px 6px; border-radius: 3px; color: #2d5a2d;">
                Status: <%= techpack.lifecycleStage %>
            </span>
            <% if (techpack.category) { %>
            <span style="background: #e8f0ff; padding: 2px 6px; border-radius: 3px; color: #1e3a8a; margin-left: 5px;">
                <%= techpack.category %>
            </span>
            <% } %>
            <% if (techpack.gender) { %>
            <span style="background: #fef3e8; padding: 2px 6px; border-radius: 3px; color: #92400e; margin-left: 5px;">
                <%= techpack.gender %>
            </span>
            <% } %>
        </div>
        
        <div style="text-align: right; color: #666;">
            <div>Created: <%= new Date(techpack.createdAt).toLocaleDateString() %></div>
            <div>Modified: <%= new Date(techpack.lastModified).toLocaleDateString() %></div>
        </div>
    </div>
</div>
