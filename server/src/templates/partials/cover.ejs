<div style="display:flex; justify-content:space-between; align-items:flex-start; border-bottom:2px solid #1f2933; padding-bottom:18px; margin-bottom:20px;">
  <div>
    <h1 style="font-size:20px; text-transform:uppercase; letter-spacing:1px; margin-bottom:6px;"><%= meta.productName %></h1>
    <p style="font-size:11px; color:#4b5563; margin-bottom:4px;">
      <strong>Article:</strong> <%= meta.articleCode %> &nbsp;|&nbsp;
      <strong>Version:</strong> <%= meta.version %>
    </p>
    <p style="font-size:10px; color:#6b7280;">
      <strong>Season:</strong> <%= meta.season || 'N/A' %> &nbsp;|&nbsp;
      <strong>Lifecycle:</strong> <%= meta.lifecycleStage || 'N/A' %>
    </p>
  </div>
  <div style="text-align:right; font-size:9px;">
    <% if (images && images.companyLogo) { %>
      <div style="margin-bottom:8px; padding:8px; border:1px solid #cbd5e1; border-radius:4px; display:inline-block; background:#fff;">
        <img src="<%= images.companyLogo %>" alt="Company Logo" style="max-height:60px; max-width:180px; object-fit:contain;" />
      </div>
    <% } else if (meta.brand) { %>
      <div style="margin-bottom:8px; padding:8px; border:1px solid #cbd5e1; border-radius:4px; display:inline-block; background:#fff;">
        <div style="font-size:10px; font-weight:600; color:#1f2933; letter-spacing:0.5px;"><%= meta.brand %></div>
      </div>
    <% } %>
    <p class="text-muted">Printed by: <%= printedBy %></p>
    <p class="text-muted">Generated at: <%= generatedAt %></p>
  </div>
</div>

<div style="display:flex; gap:18px;">
  <div style="flex:2;">
    <table class="meta-table">
      <tbody>
        <tr>
          <th>Designer</th>
          <td><%= meta.designer || '—' %></td>
        </tr>
        <tr>
          <th>Supplier</th>
          <td><%= meta.supplier || '—' %></td>
        </tr>
        <tr>
          <th>Category</th>
          <td><%= meta.category || '—' %></td>
        </tr>
        <tr>
          <th>Gender</th>
          <td><%= meta.gender || '—' %></td>
        </tr>
        <tr>
          <th>Brand</th>
          <td><%= meta.brand || '—' %></td>
        </tr>
        <tr>
          <th>Collection</th>
          <td><%= meta.collectionName || '—' %></td>
        </tr>
        <tr>
          <th>Fabric</th>
          <td><%= meta.fabricDescription || '—' %></td>
        </tr>
        <tr>
          <th>Created / Updated</th>
          <td>
            <%= meta.createdAtFormatted || meta.createdAt || '—' %>
            &nbsp;→&nbsp;
            <%= meta.updatedAtFormatted || meta.updatedAt || '—' %>
          </td>
        </tr>
        <% if (meta.retailPrice) { %>
          <tr>
            <th>Retail Price</th>
            <td><%= meta.retailPrice %> <%= meta.currency || '' %></td>
          </tr>
        <% } %>
        <% if (meta.description) { %>
          <tr>
            <th>Description</th>
            <td><%= meta.description %></td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
  <div style="flex:1; text-align:center;">
    <% if (images && images.coverImage) { %>
      <img src="<%= images.coverImage %>" alt="Cover image" style="width:100%; height:220px; object-fit:cover; border:1px solid #cbd5e1; border-radius:6px;" />
    <% } else { %>
      <div style="width:100%; height:220px; border:1px dashed #cbd5e1; border-radius:6px; display:flex; align-items:center; justify-content:center; color:#9ca3af; font-size:10px; text-transform:uppercase;">
        No cover image
      </div>
    <% } %>
  </div>
</div>

<div class="summary-grid">
  <div class="summary-card">
    <h4>Bill of Materials</h4>
    <p>Total Items: <strong><%= summary.bomCount %></strong></p>
    <p>Suppliers: <strong><%= summary.uniqueSuppliers %></strong></p>
    <p>Approved: <strong><%= summary.approvedMaterials %></strong></p>
  </div>

  <div class="summary-card">
    <h4>Measurements</h4>
    <p>Total POM: <strong><%= summary.measurementCount %></strong></p>
    <p>Critical Points: <strong><%= summary.criticalMeasurements %></strong></p>
    <p>Size Range: <strong><%= summary.sizeRange || '—' %></strong></p>
  </div>

  <div class="summary-card">
    <h4>How to Measure</h4>
    <p>Steps: <strong><%= summary.howToMeasureCount %></strong></p>
    <p>Diagrams: <strong><%= summary.howToMeasureWithImage %></strong></p>
    <p>Tips: <strong><%= summary.howToMeasureTips %></strong></p>
  </div>

  <div class="summary-card">
    <h4>Notes & Care</h4>
    <p>Notes: <strong><%= summary.notesCount %></strong></p>
    <p>Care Symbols: <strong><%= summary.careSymbolCount %></strong></p>
    <p>Last Export: <strong><%= summary.lastExport || '—' %></strong></p>
  </div>
</div>

